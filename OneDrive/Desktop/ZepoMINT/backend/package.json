{
  "name": "zepomint-backend",
  "version": "1.0.0",
  "description": "Backend for ZepoMint - Sealed-bid NFT mint using Zama fhEVM v0.8",
  "main": "index.js",
  "scripts": {
    "test": "npx hardhat test",
    "test:zama": "node scripts/test-zama.js",
    "deploy:sepolia": "npx hardhat run scripts/deploy.js --network sepolia",
    "deploy:zama": "npx hardhat run scripts/deploy-zama.js --network zama",
    "deploy:localhost": "npx hardhat run scripts/deploy.js --network localhost",
    "deploy:smart-finalize": "npx hardhat run scripts/deploy-smart-finalize.js --network localhost",
    "compile": "npx hardhat compile"
  },
  "keywords": [
    "zama",
    "fhevm",
    "nft",
    "auction",
    "sealed-bid"
  ],
  "author": "ZepoMint Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "hardhat": "^2.19.0"
  },
  "dependencies": {
    "@fhevm/hardhat-plugin": "^0.1.0",
    "@fhevm/solidity": "^0.8.0",
    "dotenv": "^16.3.1",
    "fhevm": "^0.6.2",
    "fhevmjs": "^0.6.2",
    "node-fetch": "^3.3.2"
  }
}